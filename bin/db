#!/bin/bash
# wolvwealthdb

# Stop script on errors
set -Eeuo pipefail
# set -x

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    if [ -e var/wolvwealth.sqlite3 ]; then
      echo "Error: database already exists"
    else
      mkdir -p var/uploads
      sqlite3 var/wolvwealth.sqlite3 < sql/schema.sql
      sqlite3 var/wolvwealth.sqlite3 < sql/data.sql
      cp sql/uploads/* var/uploads/
    fi
    ;;

  "destroy")
    echo "DB Destroyed"
    rm -rf var/wolvwealth.sqlite3 var/uploads
    ;;

  "reset")
    echo "Add error checking"
    rm -rf var/wolvwealth.sqlite3 var/uploads
    mkdir -p var/uploads
    sqlite3 var/wolvwealth.sqlite3 < sql/schema.sql
    sqlite3 var/wolvwealth.sqlite3 < sql/data.sql
    ;;

  "dump")
    echo "Add error checking"
    sqlite3 -batch -line var/wolvwealth.sqlite3 'SELECT * FROM users'
    sqlite3 -batch -line var/wolvwealth.sqlite3 'SELECT * FROM tokens'
    ;;
#   "random")
#     DB_FILENAME=var/wolvwealth.sqlite3

#     for i in `seq 1 100`; do
#       FILENAME="$(uuidgen).png"
#       NUMS=()
#       for j in `seq 1 6`; do
#           NUMS+=($(($RANDOM % 255)))
#       done
#       convert -size 360x360 \
#               radial-gradient:"rgb(${NUMS[0]},${NUMS[1]},${NUMS[2]})-rgb(${NUMS[3]},${NUMS[4]},${NUMS[5]})" \
#               -pointsize 64 -fill black -gravity center -annotate 0 "image $i" "var/uploads/$FILENAME"
#       OWNER="awdeorio"
#       sqlite3 -echo -batch ${DB_FILENAME} "INSERT INTO posts(filename, owner) VALUES('${FILENAME}','${OWNER}');"
#     done
#     ;;
  *)
    usage
    exit 1
    ;;
esac
