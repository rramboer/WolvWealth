#!/bin/bash
# This script runs the web server and creates the database if it doesn't exist.

set -Eeuo pipefail
# set -x

# Sanity check command line options
usage() {
  echo "Usage: $0 (dev|prod)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "dev")
    ./bin/db create
    flask --app wolvwealth --debug run --host 0.0.0.0 --port 8000
    ;;

  "prod")
    ./bin/db create
    sudo flask --app wolvwealth --debug run --host 0.0.0.0 --port 80
    ;;
  *)
    usage
    exit 1
    ;;
esac


